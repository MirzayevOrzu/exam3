// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  admin
  superadmin
}

model Computer {
  id          Int    @id @default(autoincrement())
  brend       String
  image       String
  name        String
  price       Float
  description String

  model   Model @relation(fields: [modelId], references: [id])
  modelId Int

  category   Category @relation(fields: [categoryId], references: [id])
  categoryId Int

  @@map("computer")
}

model User {
  id       Int      @id @default(autoincrement())
  username String   @unique
  password String
  role     UserRole @default(admin)

  @@map("user")
}

model Category {
  id       Int        @id @default(autoincrement())
  name     String     @unique
  Computer Computer[]

  @@map("category")
}

model Model {
  id   Int    @id @default(autoincrement())
  name String

  brend   Brend @relation(fields: [brendId], references: [id])
  brendId Int   @map("brend_id")

  Computer Computer[]

  @@map("model")
}

model Brend {
  id    Int     @id @default(autoincrement())
  name  String
  Model Model[]

  @@map("brend")
}
